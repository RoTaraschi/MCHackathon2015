<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            //Press down
            <gradient
                android:startColor="#f06627"
                android:endColor="#f06627"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#f06627" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#0f6bac"
                android:startColor="#0f6bac"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#0f6bac" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#f3a713"
                android:startColor="#f3a713"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#f3a713" />
            <stroke
                android:width="0dp"
                android:color="#f3a713" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>